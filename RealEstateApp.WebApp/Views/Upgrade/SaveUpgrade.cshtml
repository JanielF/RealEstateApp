@using RealEstateApp.Core.Application.ViewModels.Upgrade;
@model SaveUpgradeViewModel;
@{
    bool editMode = Model.Id == null ? false : true;
    ViewData["Title"] = "Save Upgrade";
}

<div class="container d-flex justify-content-center mt-auto mb-auto">
    <div class="row col-8">
        <div class="inputBackground py-5 cardCustomize col-12 border">
            <div class="d-flex justify-content-center align-items-center gap-3">
                <a asp-controller="Upgrade" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#47FFE9"
                         class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                              d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                    </svg>
                </a>
                <h2 class="p-0 mb-0 text-center fw-bold">@(editMode ? "Edit" : "New") upgrade</h2>
            </div>
            <div class="d-flex py-4 justify-content-center">
                <form method="post" asp-controller="Upgrade" asp-action="@(editMode ? "Edit" : "Create")">
                    <div class="col-12">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" style="height: 100px"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-center">
                        <div class="col-12">
                            <button type="submit"
                                    class="btn btn-info principalBlue btnPrincipalBlueHover border-0 w-100 fw-bold">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>