@using RealEstateApp.Core.Application.ViewModels.Account;
@model List<UserViewModel>;
@{
    ViewData["Title"] = "Developers";
    int count = 0;
}


<div class="container p-4 px-5">
    <div class="row">
        <h1 class="p-0 mb-4">Developers</h1>
        <div class="table-responsive py-5 px-5 border rounded-4 inputBackground">
            <div class="d-flex justify-content-start">
                <a type="button" asp-controller="Developer" asp-action="Create" class="btn btn-outline-info btn-outline-customize mb-4 fw-medium rounded-5 gap-2 d-flex justify-content-center align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                        <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
                    </svg>
                    New developer
                </a>
            </div>
            @if (Model.Count == 0 || Model == null)
            {
                <div class="d-flex justify-content-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#47FFE9" class="bi bi-inbox"
                         viewBox="0 0 16 16">
                        <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374z" />
                    </svg>
                </div>

                <div class="d-flex justify-content-center">
                    <p class="fs-4 fw-medium">Oops, it looks like you don't have any developer added.</p>
                </div>
            }
            else
            {
                <table class="table border-0 table-borderless align-middle">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">FirstName</th>
                            <th scope="col">LastName</th>
                            <th scope="col">Username</th>
                            <th scope="col">DocumentID</th>
                            <th scope="col">Email</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserViewModel user in Model)
                        {
                            count++;
                            string idModalInactive = $"inactiveUser{user.Id}";
                            string idModalActive = $"activeUser{user.Id}";
                            <tr>
                                <td>@count</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Username</td>
                                <td>@user.DocumentId</td>
                                <td>
                                    <a href="mailto:someone@example.com" class="text-white text-decoration-none">@user.Email</a>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#@idModalInactive">
                                            <span class="badge bg-info-subtle border border-info-subtle text-info-emphasis rounded-pill">Active</span>
                                        </a>

                                        <!-- Modal - Deactivate User -->
                                        <div class="modal fade p-4 py-md-5" tabindex="-1" role="dialog" id="@idModalInactive" data-bs-backdrop="static">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content rounded-3 shadow">
                                                    <div class="modal-body p-4 text-center">
                                                        <h5 class="mb-3 fw-bold">Deactivate this developer?</h5>
                                                        <p class="mb-0">You can always change your mind and go back.</p>
                                                    </div>
                                                    <div class="modal-footer flex-nowrap p-0">
                                                        <a class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0 border-end" asp-action="DeactivateUser" asp-controller="Developer" asp-route-Id="@user.Id"><strong>Yes, enable</strong></a>
                                                        <button type="button" class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" data-bs-dismiss="modal">No thanks</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#@idModalActive">
                                            <span class="badge bg-light-subtle border border-light-subtle text-light-emphasis rounded-pill">Inactive</span>
                                        </a>

                                        <!-- Modal - Activate User -->
                                        <div class="modal fade p-4 py-md-5" tabindex="-1" role="dialog" id="@idModalActive" data-bs-backdrop="static">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content rounded-3 shadow">
                                                    <div class="modal-body p-4 text-center">
                                                        <h5 class="mb-3 fw-bold">Activate this developer?</h5>
                                                        <p class="mb-0">You can always change your mind and go back.</p>
                                                    </div>
                                                    <div class="modal-footer flex-nowrap p-0">
                                                        <a class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0 border-end" asp-action="ActivateUser" asp-controller="Developer" asp-route-Id="@user.Id"><strong>Yes, enable</strong></a>
                                                        <button type="button" class="btn btn-lg btn-link hightlightedBTN fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" data-bs-dismiss="modal">No thanks</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a type="button" asp-controller="Developer" asp-action="Edit" asp-route-Id="@user.Id"
                                           class="btn btn-outline-secondary d-flex align-items-center">
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                 width="16"
                                                 height="16"
                                                 fill="currentColor"
                                                 class="bi bi-pencil-fill"
                                                 viewBox="0 0 16 16">
                                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>